rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /viaja1/{document=**} {
      // Permite que os usuários leiam e escrevam apenas em seus próprios documentos de perfil.
      match /users/{userId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Regras para o cache de sugestões compartilhado
      match /sugestoes_cache/{suggestionId} {
        // Permite que qualquer usuário autenticado leia e escreva no cache.
        allow read, write: if request.auth != null;
      }
    }
  }
}
